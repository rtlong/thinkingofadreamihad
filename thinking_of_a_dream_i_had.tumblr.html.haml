- Hamburglr::Tumblr::SAMPLE_DATA = false
!!!
%html{ 'xml:lang' => 'en', :lang => 'en', :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => 'Content-Type' }
    %title 
      = title
      - b :PostSummary do
        = ": #{post_summary}"
    - meta_var :font, 'Body', 'Helvetica Neue, Arial, Helvetica, sans-serif'
    - meta_var :if, 'Show Notes for Post', 0
    %meta{ :name => 'description', :content => meta_description }
    
    %link{ :rel => :alternate, :type => 'application/rss+xml', :href => rss, :title => 'RSS' }
    %link{ :rel => :icon, :href => favicon }
    %link{ :rel => :prev, :href => previous_page, :title => 'Newer posts' }
    %link{ :rel => :next, :href => next_page,     :title => 'Older posts' }
    %link{ :rel => :stylesheet, :media => :screen, :href => 'css/colorbox.css', :type => 'text/css' }
    %link{ :rel => :stylesheet, :media => :all,    :href => 'http://gist.github.com/raw/308320/202ce35add7912ad5588dff4fecb42ac5e626892/styles.css', :type => 'text/css' }
    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js', :type => 'text/javascript' }
    %script{ :src => 'js/jquery.colorbox-min.js', :type => 'text/javascript' }
    :javascript
      $(document).ready(function(){
        $(".lightbox").colorbox({
          maxWidth: '90%',
          maxHeight: '90%'
        });
      });

    %style{ :type => 'text/css' } 
      :sass
        body
          :font-family #{font :Body}
      = custom_css
  %body
    %h1#title
      %a{ :href => '/' }= title
    #sidebar
      #search
        %form{ :method => 'get', :action => '/search' }
          %input#q{ :name => 'q', :type => 'text', :value => search_query }
      #description= description
      #meta
        %a{ :href => '/archive' } Archive
        &bull;
        %a{ :href => rss } Subscribe
    #content
      #posts
        - b :Posts do
          .post{ :id => post_id, :class => tags_as_classes }
            .info
              %a.permalink{ :href => permalink, :title => note_count_with_label, :rel => :bookmark } #{day_of_month} #{month} #{year}
              - b :HasTags do
                in
                %ul.tags
                  - b :Tags do
                    %li
                      %a{:href => tag_url_chrono}= tag
              
            - b :PostSummary do
              .summary= post_summary
              
            - b :Regular do
              .text-post
                - b :Title do
                  %h3= title
                = body
            
            - b :Link do
              .link-post
                %h3
                  %a.link{ :href => url }= name
                - b :Description do
                  = description
            
            - b :Photo do
              .image-post
                .image
                  %a.lightbox{ :href => photo_url_high_res, :title => caption }
                    %img{ :src => photo_url_500, :alt => photo_alt }
                - b :Caption do
                  .caption= caption
                  
            - b :IfShowPostNotes do
              - b :PostNotes do
                .notes= post_notes
                
                
        - if SAMPLE_DATA
          %li.post
            %h2.permalink
              %a{ :href => permalink, :title => note_count_with_label, :rel => :bookmark } #{day_of_month} #{month} #{year}
            - b :Link do
              .link-post
                %h3
                  %a.link{ :href => url }= name
                - b :Description do
                  = description
                  
            - b :IfShowPostNotes do
              - b :PostNotes do
                = post_notes
              
          %li.post
            %h2.permalink
              %a{ :href => permalink, :title => note_count_with_label, :rel => :bookmark } #{day_of_month} #{month} #{year}
              
            - b :Photo do
              .image-post
                .image
                  %a.lightbox{ :href => photo_url_high_res, :title => caption }
                    %img{ :src => photo_url_500, :alt => photo_alt }
                - b :Caption do
                  .caption= caption
                  
            - b :IfShowPostNotes do
              - b :PostNotes do
                = post_notes
        
      #footer
        - b :Pagination do
          #pagination
            - b :PreviousPage do
              %a{ :href => previous_page, :title => 'Newer posts' } &larr;
            
            Page #{current_page} of #{total_pages}.
            
            - b :NextPage do
              %a{ :href => next_page, :title => 'Older posts' } &rarr;
