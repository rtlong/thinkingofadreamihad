- Hamburglr::Tumblr::SAMPLE_DATA = true
!!!
%html{ 'xml:lang' => 'en', :lang => 'en', :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => 'Content-Type' }
    %title 
      = title
      - b :PostSummary do
        = ": #{post_summary}"
    - meta_var :font, 'Body', 'Helvetica Neue, Arial, Helvetica, sans-serif'
    - meta_var :if, 'Show Notes for Post', 0
    %meta{ :name => 'description', :content => meta_description }
    
    %link{ :href => rss, :title => 'RSS', :rel => 'alternate', :type => 'application/rss+xml' }
    %link{ :href => favicon, :rel => 'icon' }
    %link{ :href => 'css/slimbox2.css', :rel => 'stylesheet', :type => 'text/css', :media => 'screen' }
    %link{ :href => 'css/styles.css', :rel => 'stylesheet', :type => 'text/css', :media => 'all' }
    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js', :type => 'text/javascript' }
    - # %script{ :src => 'js/slimbox2.js', :type => 'text/javascript' }

    %style{ :type => 'text/css' } 
      :sass
        body
          :font-family #{font :Body}
      = custom_css
  %body
    #body
      #sidebar
        #search
          %form{ :method => 'get', :action => '/search' }
            %input#q.input{ :name => 'q', :type => 'text', :value => search_query }
            %span.submit
              %input{ :type => 'submit', :value => 'Search' }
        #description= description
        #meta
          %a{ :href => '/archive' } Archive
          &bull;
          %a{ :href => rss } RSS
      #content
        %h1
          %a{ :href => '/' }= title
        %ul#posts
          - b :Posts do
            %li.post
              %h2.permalink
                %a{ :href => permalink, :title => note_count_with_label }= "#{day_of_month} #{month} #{year}"
                
              - b :Regular do
                .text-post
                  - b :Title do
                    %h3= title
                    = body
              
              - b :Link do
                .link-post
                  %h3
                    %a.link{ :href => url }= name
                  - b :Description do
                    = description
              
              - b :Photo do
                .image-post
                  .image
                    %a{ :href => photo_url_high_res, :rel => :lightbox, :title => caption }
                      %img{ :src => photo_url_500, :alt => photo_alt }
                  - b :Caption do
                    .caption= caption
                    
              - b :IfShowPostNotes do
                - b :PostNotes do
                  = post_notes
          
        #footer
          - b :PreviousPage do
            %a{ :href => previous_page, :title => 'Newer posts' } &larr;
          
          - b :NextPage do
            %a{ :href => next_page, :title => 'Older posts' } &rarr;
